{% extends "ApplicationSonataUserBundle::layout.html.twig" %}

{% block body_background 'ui fade' %}
{% block body_user %}
	<div class="form login">
		{% block sonata_user_login_form %}
			<form action="{{ path("fos_user_security_check") }}" method="POST" role="form" class="ui form">
				<div class="ui form segment">
					<input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
					{% if error %}
						<div class="error field">
					{% else %}
						<div class="field">
					{% endif %}
						<div class="ui left labeled icon input">
							<input type="text" placeholder="{{ 'security.login.username'|trans({}, 'SonataUserBundle') }}" id="username" name="_username" value="{{ last_username }}" required="required"/>
							<i class="user icon"></i>
						</div>
					</div>
					{% if error %}
						<div class="error field">
					{% else %}
						<div class="field">
					{% endif %}
						<div class="ui left labeled icon input">
							<input type="password" placeholder="{{ 'security.login.password'|trans({}, 'SonataUserBundle') }}"id="password" name="_password" required="required"/>
							<i class="lock icon"></i>
						</div>
					</div>
					<div class="two fields">
						<div class="field">
							<div class="inline field">
								<div class="ui checkbox">
									<input type="checkbox" id="remember_me", name="_remember_me" value="on"/>
									<label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
								</div>
							</div>
						</div>
						<div class="field">
							<input type="submit" id="_submit" class="ui right floated button" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}"/>
						</div>
					</div>
				</div>
			</form>
		{% endblock %}
	</div>
{% endblock %}
