{% extends "SiteActivityBundle::layout.html.twig" %}

{% block activities_body %}
	<div class="ui grid">
		<div class="row">
			<div class="column">
				<div class="segment">
					<h3 class="ui dividing header">
						<i class="folder outline icon"></i>
						{{ module.name }}
					</h3>
					{% if date() < module.startregistration %}
							<h4 class="ui error message centered">
							{{ 'ACTIVITY_REGISTRATION_EARLY'|trans }}
						</h4>
					{% elseif date() > module.endregistration %}
						<h4 class="ui error message centered">
							{{ 'ACTIVITY_REGISTRATION_LATE'|trans }}
						</h4>
					{% endif %}
					<div class="timeline" style="width: 100%;">
						<div class="part success" style="width:33.33%"></div>
						<div class="part warning" style="width:33.33%"></div>
						<div class="part danger" style="width:33.33%"></div>
					</div>
				</div>
			</div>
		</div>
		<div class="equal height row">
			<div class="thirteen wide column">
				<div class="segment">
					{{ module.description }}
				</div>
			</div>
			<div class="three wide column">
				<div class="segment centered">
					<input class="donught chart" value="{{ module.places - module.students|length }}" data-max="{{ module.places }}" data-width="150" data-thickness=".4">
				</div>
			</div>
		</div>
		<div class="row">
			<div class="column">
				{{ module.credits }}
				<br>
				{{ module.start|localizeddate("medium", "short") }}
				<br>
				{{ module.end|localizeddate("medium", "short") }}
				<br>
				{{ module.startRegistration|localizeddate("medium", "short") }}
				<br>
				{{ module.endRegistration|localizeddate("medium", "short") }}
				<br>
				{% if date() > module.startregistration and date() < module.endregistration %}
					{% if app.user in module.students %}
						<a href="{{ path('site_activities_module_registration', {'id': module.id }) }}"><button class="ui blue button"><i class="minus icon"></i>Se d√©sincrire</button></a>
					{% else %}
						<a href="{{ path('site_activities_module_registration', {'id': module.id }) }}"><button class="ui blue button"><i class="add icon"></i>S'inscrire</button></a>
					{% endif %}
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}
